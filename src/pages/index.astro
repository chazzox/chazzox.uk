---
import MainLayout from "@layouts/index.astro";
import Footer from "@components/footer.svelte";
import Project from "@components/project.astro";
import TextLink from "@components/text-link.astro";
---

<MainLayout>
    <div
        class="flex min-h-screen flex-col items-center justify-center bg-[#e8e8e8] bg-cover bg-fixed bg-center text-black dark:bg-black dark:text-white"
    >
        <div
            class="relative m-6 max-w-2xl overflow-hidden rounded-xl border-1 border-gray-700 p-4 shadow-xl"
        >
            <h1 class="text-2xl font-bold">
                <span class="hidden sm:inline">#</span>
                Charlie
            </h1>
            <h2 class="my-3 text-lg font-bold sm:text-xl">
                <span class="hidden sm:inline">##</span>
                Student/Full Stack Dev
            </h2>
            <p class="my-3">
                <span class="hidden sm:inline">-</span>
                Hi! I'm charlie, you may also know me as chazzox!
            </p>
            <p class="my-3">
                <span class="hidden sm:inline">-</span>
                I'm Currently innovating @ <TextLink
                    href="https://www.matillion.com/">Matillion</TextLink
                > as well <TextLink href="/blogs?slug=university"
                    >studying computer science</TextLink
                > at <TextLink href="https://www.royalholloway.ac.uk/">RHUL</TextLink
                > next year.
                <p class="my-3">
                    <span class="hidden sm:inline">-</span>
                    In the past, I've done work for companies such as
                    <TextLink href="https://ukrepmed.com/">UKRepMed</TextLink>
                </p>
                <p class="my-3">
                    <span class="hidden sm:inline">-</span>
                    Below are some of my projects in varying states of completion that
                    i've tinkered with over the years<span class="hidden sm:inline"
                        >:</span
                    >
                </p>
                <div>
                    <Project
                        name="Order of St lazarus"
                        url="/blogs?slug=ostl"
                        description="A game development project im currently working on, currently learning godot!"
                    />
                    <Project
                        url="https://hydrova.chazzox.uk/"
                        name="Hydrova"
                        description="A retired Alternative Reddit client"
                        openInNewTab
                    />
                    <Project
                        url="https://github.com/chazzox/discordify/"
                        name="discordify"
                        description="A Better Discord plugin"
                        openInNewTab
                    />
                    <Project
                        url="https://github.com/chazzox/faster-panopto/"
                        name="Faster Panopto"
                        description="Browser extension for panopto lectures"
                        openInNewTab
                    />
                    <Project
                        url="https://hack.chazzox.uk/"
                        name="oxHack"
                        description="My submission to oxford hack 22"
                        openInNewTab
                    />
                    <Project
                        url="https://github.com/chazzox/BetterDiscordPlugins/"
                        name="BetterDiscordPlugins"
                        description="A Monorepo containing all my BDP stuff"
                        openInNewTab
                    />
                </div>
            </p>
            <Footer client:load />
        </div>
    </div>
</MainLayout>
